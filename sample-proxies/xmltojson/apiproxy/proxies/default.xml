<ProxyEndpoint name="default">
  <PreFlow>
    <Response>
      <Step>
	    <Name>xmltojson</Name>
	  </Step>
    </Response>
  </PreFlow>
  <HTTPProxyConnection>
    <BasePath>/v1/xmltojson</BasePath>    
    <VirtualHost>default</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="Route">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
